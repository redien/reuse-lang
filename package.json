{
    "name": "reuse-lang",
    "version": "0.1.0",
    "description": "",
    "main": "reuse.js",
    "scripts": {
        "test": "mocha \"**/*.unit.js\"",
        "coverage-travis-ci": "mocha --require blanket -R travis-cov \"**/*.unit.js\"",
        "coverage-coveralls-io": "./utility-scripts/coveralls.sh",
        "coverage": "mocha --require blanket -R html-cov \"**/*.unit.js\" > coverage.html",
        "unit-test": "mocha \"**/*.unit.js\""
    },
    "author": "Jesper Oskarsson",
    "license": "Public Domain",
    "devDependencies": {
        "blanket": "1.1.6",
        "coveralls": "2.11.2",
        "mocha-lcov-reporter": "0.0.1",
        "should": "5.1.0",
        "travis-cov": "0.2.5"
    },
    "config": {
        "blanket": {
            "pattern": [
                "/lib/",
                "/unit/"
            ],
            "data-cover-never": [
                "/node_modules/"
            ]
        },
        "travis-cov": {
            "threshold": 90
        }
    }
}