{
    "name": "reuse-lang",
    "version": "0.1.0",
    "description": "",
    "main": "reuse.js",
    "scripts": {
        "build": "node reuse lib/symbol-name-encoder.ru > lib/_symbol-name-encoder.js; mv lib/_symbol-name-encoder.js lib/symbol-name-encoder.js",
        "test": "npm run-script build; mocha \"**/*.unit.js\" \"**/*.feature.js\"",
        "coverage-travis-ci": "npm run-script build; mocha --require blanket -R travis-cov \"**/*.unit.js\" \"**/*.feature.js\"",
        "coverage-coveralls-io": "./utility-scripts/coveralls.sh",
        "coverage": "npm run-script build; mocha --require blanket -R html-cov \"**/*.unit.js\" \"**/*.feature.js\" > coverage.html",
        "unit-test": "npm run-script build; mocha \"**/*.unit.js\""
    },
    "author": "Jesper Oskarsson",
    "license": "Public Domain",
    "devDependencies": {
        "blanket": "1.1.7",
        "coveralls": "2.11.4",
        "mocha-lcov-reporter": "1.0.0",
        "should": "7.1.0",
        "travis-cov": "0.2.5"
    },
    "config": {
        "blanket": {
            "pattern": [
                "/lib/",
                "/unit/"
            ],
            "data-cover-never": [
                "/node_modules/"
            ]
        },
        "travis-cov": {
            "threshold": 90
        }
    }
}
